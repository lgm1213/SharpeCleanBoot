<p id="notice"><%= notice %></p>

<h1>Cleaners</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zipcode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cleaners.each do |cleaner| %>
      <tr>
        <td><%= cleaner.username %></td>
        <td><%= cleaner.firstname %></td>
        <td><%= cleaner.lastname %></td>
        <td><%= cleaner.address %></td>
        <td><%= cleaner.city %></td>
        <td><%= cleaner.state %></td>
        <td><%= cleaner.zipcode %></td>
        <td><%= link_to 'Show', cleaner %></td>
        <td><%= link_to 'Edit', edit_cleaner_path(cleaner) %></td>
        <td><%= link_to 'Destroy', cleaner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cleaner', new_cleaner_path %>
